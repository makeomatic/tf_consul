# -*-Terraform-*-

data_dir = "/data"

region = "${region}"
datacenter = "${datacenter}"

consul {
  # host:port
  address = "${seed_address}"
  server_service_name = "nomad"
  server_auto_join = true
}

advertise {
  http = "$${advertise_address}:4646"
  rpc = "$${advertise_address}:4647"
  serf = "$${advertise_address}:4648"
}

server {
  enabled = true
  bootstrap_expect = "${var.servers}"
}

client {
  enabled = false
}
